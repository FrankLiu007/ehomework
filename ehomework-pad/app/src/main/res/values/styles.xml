<resources>

    <style name="fullscreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="remind">

    </style>

    <style name="remind.menu">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/bg_dark_r1</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">54dp</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="icon">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="icon.w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="icon.w.l">
        <item name="android:textSize">50sp</item>
    </style>
    <style name="icon.l">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="icon.m">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="icon.m.w">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="icon.s">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="radio">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="icon.l.menu">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <style name="text.menu">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">115dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="radio.homework_status">
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark1</item>
        <item name="android:background">@drawable/homework_status</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="icon.s.page">
        <item name="android:textColor">@color/dark3</item>
    </style>

    <style name="guidance">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="sup">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/bg_dark_r1</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="radio.icon">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/tool_status</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="icon.m.operate">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="radio.course">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/bg_radio_button</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark1</item>
        <item name="android:gravity">center</item>
    </style>

    <attr name="drawable_width" format="dimension"/>
    <attr name="drawable_height" format="dimension"/>
    <attr name="left_width" format="dimension"/>
    <attr name="left_height" format="dimension"/>
    <attr name="top_width" format="dimension"/>
    <attr name="top_height" format="dimension"/>
    <attr name="right_width" format="dimension"/>
    <attr name="right_height" format="dimension"/>
    <attr name="bottom_width" format="dimension"/>
    <attr name="bottom_height" format="dimension"/>
    <attr name="min_height" format="dimension"/>
    <attr name="max_height" format="dimension"/>
    <attr name="content_height" format="dimension"/>
    <attr name="height" format="dimension"/>

    <declare-styleable name="DrawableTextView">
        <attr name="drawable_width"/>
        <attr name="drawable_height"/>
        <attr name="left_width"/>
        <attr name="left_height"/>
        <attr name="top_width"/>
        <attr name="top_height"/>
        <attr name="right_width"/>
        <attr name="right_height"/>
        <attr name="bottom_width"/>
        <attr name="bottom_height"/>
    </declare-styleable>

    <declare-styleable name="ItemWebView">
        <attr name="min_height"/>
        <attr name="max_height"/>
        <attr name="content_height"/>
        <attr name="height"/>
    </declare-styleable>

</resources>