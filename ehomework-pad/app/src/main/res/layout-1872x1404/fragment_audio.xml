<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <LinearLayout
        android:id="@+id/ll_audio"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_grey_r3"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/icon_voice"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            style="@style/icon.s"
            android:text="@string/icon_voice"
            android:textColor="@color/dark1"/>
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textColor="@color/dark1"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_no_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/no_audio"
        android:textSize="24sp"
        android:textColor="@color/dark3"/>
</RelativeLayout>