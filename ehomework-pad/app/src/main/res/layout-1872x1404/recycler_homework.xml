<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_dotted">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_grey_r1"
            android:textSize="20sp"
            android:textColor="@color/dark3"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="23sp"
            android:textColor="@color/dark2"/>
        <TextView
            android:id="@+id/icon_remind"
            android:text="@string/icon_remind"
            style="@style/icon.w.l"
            android:textColor="@drawable/color_button"
            android:background="@drawable/bg_button"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:id="@+id/icon_expand"
            style="@style/icon.s"
            android:textColor="@drawable/color_button"
            android:background="@drawable/bg_button"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="80dp"
        android:paddingEnd="120dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"/>
        <LinearLayout
            android:id="@+id/ll_operate"
            android:layout_width="135dp"
            android:layout_height="60dp"
            android:layout_below="@id/rv_display"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_grey_r1"
            android:gravity="center">
            <TextView
                android:id="@+id/icon_operate"
                style="@style/icon.s"
                android:textColor="@color/dark1"/>
            <TextView
                android:id="@+id/tv_operate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:textColor="@color/dark1"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>